<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NotesAndContactsApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="/">Notes & Contacts</a>
                <div class="navbar-nav">
                    <a class="nav-link" asp-controller="Notes" asp-action="Index">Notes</a>
                    <a class="nav-link" asp-controller="Contacts" asp-action="Index">Contacts</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-3">
        @RenderBody()
    </div>
</body>
</html>